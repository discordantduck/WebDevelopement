{% extends "clubBase.njk" %}

{% block metaStuff %}
    <title>Add Activity</title>
{% endblock %}
    
{% block main %}
    <main>
        <form action="addActivityForm" method="post">
            <fieldset>
                <div>
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="activity_name">
                </div>
                <div>
                    <label for="date">Date:</label>
                    <input type="text" id="date" name="activity_date">
                </div>
                <div>
                    <label for="description">Description:</label>
                    <input type="text" id="description" name="activity_description">
                </div>
                <div><button type="submit">Add Activity</button></div>
            </fieldset>
        </form>
    </main>
{% endblock %}